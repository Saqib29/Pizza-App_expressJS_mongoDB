<section class="status">
    <div class="container mx-auto">
        <div class="status-box w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12">
                <h1 class="text-xl font-bold">Track delivery status</h1>
                <h6 class="bg-black text-green-600 py-1 px-4 rounded-full text-xs"><%= order._id %></h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
            </div>
            <ul>
                <li class="status-line text-xl pb-16" data-status="order_placed"><span>Order places</span></li>
                <li class="status-line text-xl pb-16" data-status="confirmed"><span>Order Confirmed</span></li>
                <li class="status-line text-xl pb-16" data-status="prepared"><span>Preparation</span></li>
                <li class="status-line text-xl pb-16" data-status="delivered"><span>Out for delivery</span></li>
                <li class="status-line text-xl" data-status="completed"><span>Complete</span></li>
            </ul>
        </div>
    </div>
</section>